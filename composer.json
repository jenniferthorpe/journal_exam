{
  "name": "fend18/slim-pdo-boilerplate",
  "description": "Basic Slim setup with PDO",
  "require": {
      "php": ">=5.6",
      "slim/slim": "^3.1",
      "slim/php-view": "^2.2"
  },
  "autoload": {
      "psr-4": {
          "": "src/classes"
      }
  },
  "config": {
    "process-timeout": 0,
    "sort-packages": true
  },
  "scripts": {
      "start": "php -S localhost:8000 -t public"
  }
}
